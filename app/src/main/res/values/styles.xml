<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/appbar</item>
        <!--a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/appbar</item>
        <!--a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--for status bar -->
        <item name="android:statusBarColor">@color/appbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    <!-- customize the text in action bar -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionbartext</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- style for progress bar -->

    <!-- style for song in list -->
    <style name="song_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- style for artist in list -->
    <style name="artist_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <!-- style for play button -->
    <style name="play">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <!-- style for list image -->
    <style name="list_image">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- style for player image-->
    <style name="player_image">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- style for player artist-->
    <style name="artist_player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- style for player song-->
    <style name="song_player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- style for player buttons-->
    <style name="buttons_player">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>

    </style>

</resources>
